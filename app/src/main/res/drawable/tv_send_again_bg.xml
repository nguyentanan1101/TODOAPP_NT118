<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <selector android:layout_width="wrap_content" android:layout_height="wrap_content">
        <!-- Khi nhấn -->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#D1C4E9" /> <!-- màu nhấn, ví dụ tím nhạt -->
            </shape>
        </item>

        <!-- trạng thái mặc định -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" /> <!-- mặc định trong suốt -->
            </shape>
        </item>
    </selector>
</selector>