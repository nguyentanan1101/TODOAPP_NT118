<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activity.MainActivity"
    android:fitsSystemWindows="true">

    <!-- Thanh trên cùng -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnSort"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_sort"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:layout_toEndOf="@id/btnSort"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/layoutSearchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnSort"
            android:layout_toStartOf="@id/btnAdd"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_search_input"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search tasks..."
                android:background="@null"
                android:textSize="16sp"
                android:padding="5dp"
                android:maxLines="1"
                android:inputType="text"/>

            <ImageView
                android:id="@+id/btnCloseSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/btnNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bell"
            android:layout_toStartOf="@id/btnAdd"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <!-- Các tab lọc -->
    <LinearLayout
        android:id="@+id/tabFilters"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnToday"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Today"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#5E35B1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnPersonal"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Personal"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#5E35B1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnWork"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Work"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#5E35B1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/labelDots"
        android:layout_below="@id/tabFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="24dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_shape"
                android:backgroundTint="#FF5252" />  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:textSize="14sp"
            android:textColor="#212121"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="24dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_shape"
                android:backgroundTint="#AB47BC" />  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="14sp"
            android:textColor="#212121"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_shape"
                android:backgroundTint="#9E9E9E" />  <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            android:textSize="14sp"
            android:textColor="#212121"/>
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView hiển thị task theo nhóm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/labelDots"
        android:layout_above="@id/completeTasks"
        android:padding="8dp" />

    <!-- Thanh check complete tasks -->
    <LinearLayout
        android:id="@+id/completeTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNav"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTitleCompleteTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check all complete tasks"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#5E35B1"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Bottom navigation -->
    <include
        layout="@layout/layout_bottom_nav"
        android:id="@+id/bottomNav" />
</RelativeLayout>
