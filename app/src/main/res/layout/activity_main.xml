<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <!-- Thanh trên cùng -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:layout_toEndOf="@id/btnMenu"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/btnNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bell"
            android:layout_toStartOf="@id/btnAdd"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>

    <!-- Các tab lọc -->
    <LinearLayout
        android:id="@+id/tabFilters"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnToday"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Today"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#5E35B1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnPersonal"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Personal"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#5E35B1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnWork"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Work"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#5E35B1"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Các nhãn với chấm màu ngay dưới tab filter -->
    <LinearLayout
        android:id="@+id/labelDots"
        android:layout_below="@id/tabFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp">

        <!-- Work -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="32dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_shape"
                android:backgroundTint="#FFA500" />  <!-- Cam -->

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_shape"
                android:backgroundTint="#1976D2" />  <!-- Xanh dương -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                android:textSize="16sp"
                android:textColor="#212121"/>
        </LinearLayout>

        <!-- Personal -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="32dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_shape"
                android:backgroundTint="#4CAF50" />  <!-- Xanh lá -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal"
                android:textSize="16sp"
                android:textColor="#212121"/>
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView hiển thị task theo nhóm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTasks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/labelDots"
        android:layout_above="@id/completeTasks"
        android:padding="8dp" />

    <!-- Thanh check complete tasks -->
    <LinearLayout
        android:id="@+id/completeTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNav"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check all complete tasks"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="#5E35B1"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <!-- Bottom navigation -->
    <include
        layout="@layout/layout_bottom_nav"
        android:id="@+id/bottomNav" />
</RelativeLayout>
