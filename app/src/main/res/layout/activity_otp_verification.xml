<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FEF7FF"
    tools:context=".activity.OTPVerificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TO–DO"
        android:gravity="center_horizontal"
        android:textSize="100sp"
        android:fontFamily="@font/nanum_brush_script"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/rounded_image_background">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loginbkg"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_background"
            android:contentDescription="Theme image" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Code"
            android:textColor="#6750A4"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:id="@+id/llOtpInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etOtp1"
                    style="@style/OtpInputStyle"
                    android:layout_weight="1"

                    android:contentDescription="Mã OTP số thứ nhất"
                    android:importantForAutofill="yes"
                    android:autofillHints="sms_otp"
                    />

                <EditText
                    android:id="@+id/etOtp2"
                    style="@style/OtpInputStyle"
                    android:layout_weight="1"

                    android:contentDescription="Mã OTP số thứ hai"
                    android:importantForAutofill="yes"
                    android:autofillHints="sms_otp" />
                    />
                <EditText
                    android:id="@+id/etOtp3"
                    style="@style/OtpInputStyle"
                    android:layout_weight="1"
                    android:contentDescription="Mã OTP số thứ ba"
                    android:importantForAutofill="yes"
                    android:autofillHints="sms_otp" />
                    />
                <EditText
                    android:id="@+id/etOtp4"
                    style="@style/OtpInputStyle"
                    android:layout_weight="1"
                    android:contentDescription="Mã OTP số thứ tư"
                    android:importantForAutofill="yes"
                    android:autofillHints="sms_otp" />
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSendAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llOtpInputs"
                android:layout_alignStart="@id/llOtpInputs"
                android:text="Send again"
                android:textSize="14sp"
                android:textColor="#6750A4"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:clickable="true"
                android:focusable="true"
                />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>